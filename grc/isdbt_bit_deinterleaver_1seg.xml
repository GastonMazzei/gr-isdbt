<block>
  <name>Bit Deinterleaver 1-Seg</name>
  <key>isdbt_bit_deinterleaver_1seg</key>
  <category>ISDBT</category>
  <import>import isdbt</import>
  <make>isdbt.bit_deinterleaver_1seg($mode, $constellation)</make>
  <param>
    <name>Mode</name>
    <key>mode</key>
    <value>3</value>
    <type>int</type>
  </param>
  <param>
    <name>Constellation</name>
    <key>constellation</key>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
    <vlen>1*96*(2**($mode-1))</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
