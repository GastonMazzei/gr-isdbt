<?xml version="1.0"?>
<block>
  <name>TMCC Decoder</name>
  <key>isdbt_tmcc_decoder</key>
  <category>ISDBT</category>
  <import>import isdbt</import>
  <make>isdbt.tmcc_decoder($transmission_mode.payload_length, $transmission_mode.data_length)</make>
  <param>
    <name>Transmission Mode</name>
    <key>transmission_mode</key>
    <type>enum</type>
    <option>
      <name>MODE1(2K)</name>
      <key>2k</key>
      <opt>payload_length:1405</opt>
      <opt>data_length:1248</opt>
    </option>
    <option>
      <name>MODE2(4K)</name>
      <key>4k</key>
      <opt>payload_length:2809</opt>
      <opt>data_length:2496</opt>
    </option> 
    <option>
      <name>MODE3(8K)</name>
      <key>8k</key>
      <opt>payload_length:5617</opt>
      <opt>data_length:4992</opt>
    </option>   
  </param>
  <sink>
  	<name>in</name>
	<type>complex</type>
	<vlen>$transmission_mode.payload_length</vlen>
  </sink>
  <source>
  	<name>out</name>
	<type>complex</type>
	<vlen>$transmission_mode.data_length</vlen>
  </source>
</block>

