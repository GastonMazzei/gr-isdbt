<?xml version="1.0"?>
<block>
  <name>TMCC Decoder</name>
  <key>isdbt_tmcc_decoder</key>
  <category>ISDBT</category>
  <import>import isdbt</import>
  <make>isdbt.tmcc_decoder($transmission_mode)</make>
  <param>
    <name>Transmission Mode</name>
    <key>transmission_mode</key>
    <type>enum</type>
    <option>
      <name>MODE1(2K)</name>
      <key>1</key>
    </option>
    <option>
      <name>MODE2(4K)</name>
      <key>2</key>
    </option> 
    <option>
      <name>MODE3(8K)</name>
      <key>3</key>
    </option>   
  </param>
  <sink>
  	<name>in</name>
	<type>complex</type>
	<vlen>13*108*(2**($transmission_mode-1))+1</vlen>
  </sink>
  <source>
  	<name>out</name>
	<type>complex</type>
	<vlen>13*96*(2**($transmission_mode-1))</vlen>
  </source>
</block>

