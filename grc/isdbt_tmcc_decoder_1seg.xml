<?xml version="1.0"?>
<block>
  <name>TMCC Decoder 1-seg</name>
  <key>isdbt_tmcc_decoder_1seg</key>
  <category>ISDBT</category>
  <import>import isdbt</import>
  <make>isdbt.tmcc_decoder_1seg($transmission_mode, $print_params)</make>
  <param>
    <name>Transmission Mode</name>
    <key>transmission_mode</key>
    <type>enum</type>
    <option>
      <name>MODE1(2K)</name>
      <key>1</key>
    </option>
    <option>
      <name>MODE2(4K)</name>
      <key>2</key>
    </option> 
    <option>
      <name>MODE3(8K)</name>
      <key>3</key>
    </option>   
</param>
  <param>
      <name>Print params.</name>
      <key>print_params</key>
      <value>False</value>
      <type>enum</type>
      <option>
          <name>Yes</name>
          <key>True</key>
      </option>
      <option>
          <name>No</name>
          <key>False</key>
      </option>
  </param>
  <sink>
  	<name>in</name>
	<type>complex</type>
	<vlen>108*(2**($transmission_mode-1))</vlen>
  </sink>
  <source>
  	<name>out</name>
	<type>complex</type>
	<vlen>96*(2**($transmission_mode-1))</vlen>
  </source>
</block>
